# HyperFleet Operator Sample Configuration
# Copy this file to .env and fill in your actual values

# Cluster Configuration
CLUSTER_NAME=proxmox-test
NAMESPACE=default

# Proxmox Configuration
PROXMOX_ENDPOINT=https://pve.example.com:8006/api2/json
NODE_1=pve-node-1

# TLS Configuration
# WARNING: Only set to true for testing or trusted environments with self-signed certificates
# Setting this to true makes connections vulnerable to man-in-the-middle attacks
INSECURE_SKIP_VERIFY=false

# Storage and Network
DEFAULT_STORAGE=local-lvm
DEFAULT_NETWORK=vmbr0

# DNS Configuration
DNS_DOMAIN=hyperfleet.local
DNS_SERVER_1=192.168.1.1
DNS_SERVER_2=8.8.8.8

# Secret Configuration
SECRET_NAME=test-proxmox-credentials

# Environment
ENVIRONMENT=test

# GitHub Configuration (for bootstrap service testing)
# Uncomment and fill in your values to test the bootstrap service
GH_PAT=your_github_personal_access_token
OWNER=your_github_username_or_org
REPO=your_repository_name
